{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "types": [
            "node",
            "jest"
        ],
        "lib": [
            "ES5",
            "DOM"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "only-jsx",
        "allowJs": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
    }
}